{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "declarationMap": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDirs": ["src"],
    "types": ["node", "mocha"],
  },
  "include": [
    "src",
    "test/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
